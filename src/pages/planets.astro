---
import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import PlanetsPreview from "../components/PlanetsPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";
import { Image } from "astro:assets";

const images = import.meta.glob<{ default: ImageMetadata }>(
	"/src/assets/*.{jpeg,jpg,png,gif}",
);

---

<BaseLayout
	title="Planets | Stellar Discussions"
	description="Hear what the spirit of the planets have to say."
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Planets"
				tagline="Hear what the spirit of the planets have to say."
				align="start"
			/>
			<Grid variant="small">
				{
					<a class="card" href={`/earth/`}>
						<span class="title">{'Earth'}</span>
						<img
							src={'/src/assets/earth.jpg'}
							alt={"The planet Earth"}
							loading="lazy"
							decoding="async"
						/>
					</a>
					
					<a class="card" href={`/jupiter/`}>
						<span class="title">{'Jupiter'}</span>
						<img
							src={'/src/assets/jupiter.jpg'}
							alt={"The planet Jupiter"}
							loading="lazy"
							decoding="async"
						/>
					</a>

					<a class="card" href={`/luna/`}>
						<span class="title">{'Luna'}</span>
						<img
							src={'/src/assets/luna.jpg'}
							alt={"Earth's Moon Luna"}
							loading="lazy"
							decoding="async"
						/>
					</a>

					<a class="card" href={`/mercury/`}>
						<span class="title">{'Mercury'}</span>
						<img
							src={'/src/assets/mercury.jpg'}
							alt={"The planet Mercury"}
							loading="lazy"
							decoding="async"
						/>
					</a>

					<a class="card" href={`/neptune/`}>
						<span class="title">{'Neptune'}</span>
						<img
							src={'/src/assets/neptune.jpg'}
							alt={"The planet Neptune"}
							loading="lazy"
							decoding="async"
						/>
					</a>

					<a class="card" href={`/saturn/`}>
						<span class="title">{'Saturn'}</span>
						<img
							src={'/src/assets/saturn.jpg'}
							alt={"The planet Saturn"}
							loading="lazy"
							decoding="async"
						/>
					</a>

					<a class="card" href={`/sol/`}>
						<span class="title">{'Sol'}</span>
						<img
							src={'/src/assets/sun.jpg'}
							alt={"The Sun"}
							loading="lazy"
							decoding="async"
						/>
					</a>
					
					<a class="card" href={`/uranus/`}>
						<span class="title">{'Uranus'}</span>
						<img
							src={'/src/assets/uranus.jpg'}
							alt={"The planet Uranus"}
							loading="lazy"
							decoding="async"
						/>
					</a>					

					<a class="card" href={`/venus/`}>
						<span class="title">{'Venus'}</span>
						<img
							src={'/src/assets/venus.jpg'}
							alt={"The planet Venus"}
							loading="lazy"
							decoding="async"
						/>
					</a>
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.title {
			border-radius: 0.9375rem;
		}
	}
</style>

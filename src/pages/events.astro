---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import EventPreview from "../components/EventPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const projects = (await getCollection("events")).sort(
	(a, b) => a.data.sortDate.valueOf() - b.data.sortDate.valueOf(),
);
---

<BaseLayout
	title="Upcoming Events | CHANGEME"
	description="Learn about CHANGEME most recent events"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Upcoming Events"
				tagline=""
				align="start"
			/>
			<Grid variant="list">
				{
					projects.map((project) => (
						<li>
							<EventPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

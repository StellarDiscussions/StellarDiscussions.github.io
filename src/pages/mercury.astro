---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
import ContactCTA from "../components/ContactCTA.astro";
import MercuryPreview from "../components/MercuryPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const planetblog = (await getCollection("mercury")).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Mercury | Stellar Discussions"
	description="Mercury (Roman)/ Hermes (Greek)"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<div class="wrapper stack gap-2">
				<a class="back-link" href="/planets/"
					><Icon icon="arrow-left" />Planets</a
				>
			<Hero
				title="Mercury"
				tagline="Mercury (Roman)/ Hermes (Greek)"
				align="start"
			/>
			<Grid variant="small">
				{
					planetblog.map((project) => (
						<li>
							<MercuryPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
